<!DOCTYPE html>
<html>
<head>
  <title>Belle Isle Studios</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>

<script type="text/javascript">
  $(document).ready(function() {
  $("a.fancybox-button").fancybox({
    prevEffect    : 'none',
    nextEffect    : 'none',
    closeBtn    : true,
    helpers   : {
      title : { type : 'inside' },
      buttons : {}
    }
  });
});
</script>

</head>
<body>
  <div class="container">
    <div class="span11">
    
    <ul class="nav nav-tabs">
      <%= image_tag("main-bg.jpg") %>
        <li><%= link_to "Home", root_path %></li>
        <li><%= link_to "Biography", welcome_biography_path %></li>
        <li class="dropdown"><a class="dropdown-toggle" data-toggle="dropdown" href="#">Studio<span class="caret"></span></a>
            <ul class="dropdown-menu">
              <li><%= link_to "Instruments", welcome_instruments_path %></li>              
              <li><%= link_to "Musicians", welcome_musician_path %></li>
              <li><%= link_to "Gear", welcome_gear_path %></li>
              <li><%= link_to "Workshops", welcome_workshops_path %></li>
            </ul>
          </li>
        <li class="dropdown"><a class="dropdown-toggle" data-toggle="dropdown" href="#">Artists<span class="caret"></span></a>
            <ul class="dropdown-menu">
              <li><%= link_to "Jade", welcome_jade_path %></li>              
              <li><%= link_to "DWB", welcome_dwb_path %></li>
              <li><%= link_to "Valann", welcome_valann_path %></li>
            </ul>
        </li>
        <li><%= link_to "Studio Mascots", welcome_mascots_path %></li>
        <li><%= link_to "Retreat", welcome_retreat_path %></li>
        <li><%= link_to "Contact", welcome_contact_path %></li>
    </ul>
    

    <%= yield %>
  </div>
    <div class="row">
    <div class="span11">
      <%= image_tag("btm.jpg") %>
    </div>
    </div>
  </div>
  <div>
  <center><p>Copyright &copy; Belle Isle Studios</p></center>
  </div>
</body>
</html>
